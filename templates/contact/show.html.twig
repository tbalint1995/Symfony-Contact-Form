{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
     <h1 class="my-5 text-center">Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

   <p class="text-center"><a href="{{ path('app_contact_index') }}" class="btn btn-primary">back to list</a></p>

{% endblock %}
